            display: flex;
            flex-direction: column;
            @media screen and (min-width: 450px) {
              flex-direction: row;
            }
            margin-top: var(--spacing-400);

            input[type="email"] {
              background-color: transparent;
              outline: 2px solid var(--key-950);
              padding: var(--spacing-100) var(--spacing-400);

              &::placeholder {
                color: var(--key-200);
              }
            }

            input[type="submit"] {
              background-color: var(--key-950);
              color: var(--white);
              font-weight: 600;
              border: none;
              border-radius: 0;
              outline: 2px solid var(--key-950);


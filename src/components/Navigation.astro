---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import logo from "../images/nav-logo.jpg";
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.replaceAll("/", "");
---

<nav>
  <a href="/">
    <Image src={logo} alt="Amplifying F# logo" height="30px" />
  </a>

  <ul>
    <li>
      <a
        href="/blog"
        class={currentPath === "blog" ? "active blog-link" : "blog-link"}
        >Blog</a
      >
    </li>
    <li class="hide-tablet">
      <a
        href="/incitation"
        class={currentPath === "incitation" ? "active" : ""}
      >
        Incitation</a
      >
    </li>
    <li>
      <a
        href="/sessions"
        class={currentPath === "sessions"
          ? "active sessions-link"
          : "sessions-link"}>Sessions</a
      >
    </li>
    <li class="hide-tablet">
      <a
        href="/fsharp-essentials"
        class={currentPath === "fsharp-essentials" ? "active" : ""}
      >
        F# Essentials</a
      >
      <span class="new">new</span>
    </li>
    <li class="hide-tablet">
      <a href="/burn-out" class={currentPath === "burn-out" ? "active" : ""}>
        Burn out</a
      >
      <span class="new">new</span>
    </li>
    <li class="hide-tablet">
      <a href="/hire" class={currentPath === "hire" ? "active" : ""}> Hire</a>
      <span class="new">new</span>
    </li>
    <li class="hide-tablet">
      <a href="/faq" class={currentPath === "faq" ? "active" : ""}>FAQ</a>
    </li>
    <li>
      <a
        href="/join-us"
        class={currentPath === "join-us"
          ? "active join-us-link"
          : "join-us-link"}>Join us!</a
      >
    </li>
  </ul>
  <ul id="tablet">
    <li>
      <a
        href="/blog"
        class={currentPath === "blog" ? "active blog-link" : "blog-link"}
        >Blog</a
      >
    </li>
    <li>
      <a
        href="/sessions"
        class={currentPath === "sessions"
          ? "active sessions-link"
          : "sessions-link"}>Sessions</a
      >
    </li>
    <li>
      <a
        href="/join-us"
        class={currentPath === "join-us"
          ? "active join-us-link"
          : "join-us-link"}>Join us!</a
      >
    </li>
  </ul>
  <ul id="more">
    <li>
      <a href="/incitation"> Incitation</a>
    </li>
    <li>
      <a
        href="/fsharp-essentials"
        class={currentPath === "fsharp-essentials" ? "active" : ""}
      >
        F# Essentials</a
      >
      <span class="new">new</span>
    </li>
    <li>
      <a href="/burn-out" class={currentPath === "burn-out" ? "active" : ""}>
        Burn out</a
      >
      <span class="new">new</span>
    </li>
    <li>
      <a href="/hire" class={currentPath === "hire" ? "active" : ""}> Hire</a>
      <span class="new">new</span>
    </li>
    <li>
      <a href="/faq" class={currentPath === "faq" ? "active" : ""}>FAQ</a>
    </li>
  </ul>
  <Icon name="ri:menu-fill" width="30px" height="30px" />
  <input type="checkbox" name="mobile-menu" />
  <style>
    nav {
      padding: var(--spacing-200);
      background-color: var(--key-950);
      color: var(--white);
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: auto 0fr;
      grid-column-gap: 0;
      grid-row-gap: 0;
      position: relative;
      transition: grid-template-rows 250ms;
      --link-height: 30px;

      #tablet,
      #more {
        display: none;
      }

      > a {
        display: block;
        height: var(--link-height);
        flex: 1;

        img {
          filter: invert(100%);
          height: var(--link-height);
          grid-area: 1 / 1 / 2 / 2;
          object-fit: contain;
        }
      }

      svg {
        grid-area: 1 / 2 / 2 / 3;
        justify-self: end;
      }

      input[type="checkbox"] {
        position: absolute;
        width: 50%;
        height: 100%;
        left: 50%;
        top: 0;
        appearance: none;
        cursor: pointer;
      }

      ul {
        overflow: hidden;
        grid-area: 2 / 1 / 3 / 3;
        visibility: collapse;
        transition: all 250ms;
        max-height: 0;
        list-style: none;
        margin: 0;
        padding: 0;

        li {
          margin: 0;
          display: flex;
          align-items: center;
          gap: var(--spacing-300);

          .new {
            background-color: var(--cyan-500);
            text-transform: uppercase;
            z-index: 10;
            font-size: calc(var(--spacing-400) / 2);
            padding: 2px 4px;
            transform: translateY(-2px);
            font-weight: 600;
          }
        }

        a {
          padding-block: var(--spacing-100);
          display: inline-block;
          text-decoration: none;
          color: white;
          font-weight: 500;
          text-transform: uppercase;
          position: relative;

          &::after {
            content: "";
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 0.1em;
            background-color: var(--white);
            transition:
              opacity 300ms,
              transform 300ms;
            opacity: 0;
            transform: scale(0);
            transform-origin: center;
          }

          &:hover::after,
          &:focus::after {
            transform: scale(1);
            opacity: 1;
          }

          &.active::after {
            content: "";
            position: absolute;
            bottom: 0;
            left: 25%;
            width: 50%;
            height: 0.1em;
            background-color: var(--white);
            transition:
              opacity 300ms,
              transform 300ms;
            opacity: 1;
            transform: scale(1);
            transform-origin: center;
          }
        }

        .blog-link {
          color: var(--magenta-300);

          &::after {
            background-color: var(--magenta-200);
          }
        }

        .join-us-link {
          color: var(--cyan-200);

          &::after {
            background-color: var(--cyan-100);
          }
        }

        .sessions-link {
          color: var(--yellow-300);

          &::after {
            background-color: var(--yellow-200);
          }
        }
      }

      &:has(input[type="checkbox"]:checked) {
        grid-template-rows: auto 1fr;

        ul {
          margin-top: var(--spacing-200);
          visibility: visible;
          max-height: initial;
        }
      }

      @media screen and (min-width: 768px) {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: var(--spacing-200) var(--spacing-400);

        > a {
          flex: initial;
        }

        &:has(input[type="checkbox"]:checked) {
          ul {
            margin-top: 0;
          }

          #more {
            display: block;
            position: fixed;
            right: 0;
            z-index: 5;
            top: calc(2 * var(--link-height) + 4px);
            background-color: var(--key-950);
            border-top: 1px solid var(--key-300);
            padding: var(--spacing-100) var(--spacing-200);

            li {
              margin-block: var(--spacing-200);

              &::after {
                display: none;
              }
            }
          }
        }

        ul {
          display: flex;
          flex: 1;
          justify-content: center;
          visibility: visible;
          max-height: initial;
          margin: 0;
          gap: var(--spacing-300);

          li::after {
            content: "|";
            margin-left: var(--spacing-300);
          }

          li:last-child::after {
            content: none;
          }

          li {
            gap: 0;

            &:has(.new) {
              gap: var(--spacing-200);

              &::after {
                margin-left: var(--spacing-200);
              }
            }

            &.hide-tablet {
              display: none;
            }

            a {
              font-size: var(--font-200);
            }
          }
        }
      }
      @media screen and (min-width: 1200px) {
        > svg,
        input[type="checkbox"] {
          display: none;
        }

        &:has(input[type="checkbox"]:checked) {
          #more {
            display: none;
          }
        }

        ul {
          justify-content: right;

          li.hide-tablet {
            display: block;
          }

          li {
            .new {
              transform: rotate(30deg);
              font-size: calc(var(--spacing-400) / 3);
              align-self: flex-start;
              margin-top: var(--spacing-100);
              margin-left: var(--spacing-100);
              display: inline-block;
            }
          }
        }
      }
    }
  </style>
</nav>
